# Backend Environment Configuration - Local Development
NODE_ENV=development
PORT=3001

# SSL Configuration for Development (Required for WebRTC)
SSL_ENABLED=true
SSL_KEY_PATH=.ssl/server.key
SSL_CERT_PATH=.ssl/server.crt

# CORS Configuration
FRONTEND_URL=https://localhost:5173
STORAGE_PUBLIC_BASE_URL=https://localhost:3001 # local

# WebRTC Configuration
WEBRTC_ENABLED=true
WEBRTC_REQUIRE_HTTPS=true

# Logging
LOG_LEVEL=info

# Performance
MAX_CONCURRENT_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000
HEARTBEAT_INTERVAL=30000

# HLS
HLS_SEGMENT_DURATION=2
HLS_PLAYLIST_LENGTH=6
AUDIO_BITRATE=128000
HLS_CLEANUP_INTERVAL=300000

# Audio Storage (optional - will auto-detect from FRONTEND_URL if not set)

# DB
DATABASE_URL=postgresql://user:password@localhost:5432/jam_band_db
RAILWAY_VOLUME_MOUNT_PATH=/record-audio

# Settings
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# Email Verification
EMAIL_VERIFICATION_EXPIRES_HOURS=24
PASSWORD_RESET_EXPIRES_HOURS=1

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret