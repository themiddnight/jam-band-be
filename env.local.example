# Local Development Environment Variables
# Copy this file to .env.local and modify as needed

# Server Configuration
NODE_ENV=development
PORT=3001

# SSL Configuration (for WebRTC in development)
SSL_ENABLED=false
SSL_KEY_PATH=.selfsigned/key.pem
SSL_CERT_PATH=.selfsigned/cert.pem

# CORS Configuration
# Single origin (legacy support)
CORS_ORIGIN=*

# Multiple allowed origins (comma-separated)
# Use this for production or strict development mode
ALLOWED_ORIGINS=https://jam-band-fe.vercel.app,https://yourdomain.com

# Development origins (comma-separated)
# These are always allowed in development mode when strict mode is enabled
DEVELOPMENT_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# CORS strict mode (true = strict, false = flexible)
# When true, only specified origins are allowed even in development
CORS_STRICT_MODE=false

# CORS credentials
CORS_CREDENTIALS=true

# WebRTC Configuration
WEBRTC_ENABLED=true
WEBRTC_REQUIRE_HTTPS=false

# Railway Configuration (for deployment)
RAILWAY_URL=
RAILWAY_SERVICE=

# Logging Configuration
LOG_LEVEL=info 

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300
MAX_CONNECTIONS=1000
ENABLE_GC=false
CONNECTION_TIMEOUT=1800000
CLEANUP_INTERVAL=300000
DISABLE_SYNTH_RATE_LIMIT=true 