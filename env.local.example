# Local Development Environment Variables
# Copy this file to .env.local and modify as needed

# Server Configuration
NODE_ENV=development
PORT=3001

# SSL Configuration (for WebRTC in development)
SSL_ENABLED=false
SSL_KEY_PATH=.selfsigned/key.pem
SSL_CERT_PATH=.selfsigned/cert.pem

# CORS Configuration
# Single frontend URL for CORS (use your local frontend URL)
FRONTEND_URL=https://192.168.1.95:5173

# CORS strict mode (true = strict, false = flexible)
# When true, only specified origins are allowed even in development
CORS_STRICT_MODE=false

# CORS credentials
CORS_CREDENTIALS=true

# WebRTC Configuration
WEBRTC_ENABLED=true
WEBRTC_REQUIRE_HTTPS=false

# Logging Configuration
LOG_LEVEL=info

# Performance Configuration
DISABLE_SYNTH_RATE_LIMIT=true
DISABLE_VOICE_RATE_LIMIT=false

# Voice Rate Limiting (events per minute per user)
VOICE_OFFER_RATE_LIMIT=60
VOICE_ANSWER_RATE_LIMIT=60
VOICE_ICE_RATE_LIMIT=200 