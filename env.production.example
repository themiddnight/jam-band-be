# Production environment variables
# Copy or provide these values in your production environment (e.g., hosting platform secrets)

NODE_ENV=production
PORT=3001

# SSL: in many PaaS environments SSL is terminated upstream. If running behind a proxy that
# does not handle TLS, set SSL_ENABLED=true and provide key/cert paths accessible to the app.
SSL_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# Frontend origin for CORS (set to your deployed frontend)
FRONTEND_URL=https://your-production-frontend.com
CORS_STRICT_MODE=true
CORS_CREDENTIALS=true

# WebRTC should require HTTPS in production
WEBRTC_ENABLED=true
WEBRTC_REQUIRE_HTTPS=true

# Logging level for production (error|warn|info)
LOG_LEVEL=warn

# Performance and rate limiting
DISABLE_SYNTH_RATE_LIMIT=false
DISABLE_VOICE_RATE_LIMIT=false
VOICE_OFFER_RATE_LIMIT=60
VOICE_ANSWER_RATE_LIMIT=60
VOICE_ICE_RATE_LIMIT=200