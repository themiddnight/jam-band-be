# Production Environment Variables
# Copy this file to env.production and modify with your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# SSL Configuration (Railway handles SSL termination)
SSL_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# CORS Configuration - PRODUCTION SECURITY
# IMPORTANT: Only allow your actual frontend domains
# Single origin (legacy support)
CORS_ORIGIN=https://jam-band-fe.vercel.app

# Multiple allowed origins (comma-separated)
# Only include your actual production domains
ALLOWED_ORIGINS=https://jam-band-fe.vercel.app,https://yourdomain.com

# Development origins (not used in production but kept for consistency)
DEVELOPMENT_ORIGINS=http://localhost:5173,http://localhost:3000

# CORS strict mode (always true in production for security)
CORS_STRICT_MODE=true

# CORS credentials
CORS_CREDENTIALS=true

# WebRTC Configuration
WEBRTC_ENABLED=true
WEBRTC_REQUIRE_HTTPS=true

# Railway Configuration
RAILWAY_URL=https://your-app.railway.app
RAILWAY_SERVICE=jam-band-backend

# Logging Configuration
LOG_LEVEL=warn 

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=600
MAX_CONNECTIONS=2000
ENABLE_GC=false
CONNECTION_TIMEOUT=1800000
CLEANUP_INTERVAL=300000
DISABLE_SYNTH_RATE_LIMIT=false 