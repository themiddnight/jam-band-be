# Production Environment Variables
# Copy this file to env.production and modify with your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# SSL Configuration (Railway handles SSL termination)
SSL_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# CORS Configuration - PRODUCTION SECURITY
# Single frontend URL for CORS
FRONTEND_URL=https://jam-band-fe.vercel.app

# CORS strict mode (always true in production for security)
CORS_STRICT_MODE=true

# CORS credentials
CORS_CREDENTIALS=true

# WebRTC Configuration
WEBRTC_ENABLED=true
WEBRTC_REQUIRE_HTTPS=true

# Logging Configuration
LOG_LEVEL=warn

# Performance Configuration
DISABLE_SYNTH_RATE_LIMIT=false
DISABLE_VOICE_RATE_LIMIT=false

# Voice Rate Limiting (events per minute per user)
VOICE_OFFER_RATE_LIMIT=60
VOICE_ANSWER_RATE_LIMIT=60
VOICE_ICE_RATE_LIMIT=200 