{
  "name": "jam-band-be",
  "version": "1.0.0",
  "description": "Backend service for Jam Band application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=2048 dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "start:dev:gc": "NODE_ENV=development ENABLE_GC=true tsx watch src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:regression": "jest tests/regression/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:regression",
    "test:changed": "jest --onlyChanged",
    "test:related": "jest --findRelatedTests",
    "test:webrtc": "bun run scripts/test-webrtc-https.ts",
    "test:approval": "jest --testPathPatterns=ApprovalWorkflowHandler.test.ts --verbose",
    "test:https": "jest --testPathPatterns=HTTPSWebRTC.test.ts --verbose",
    "test:https:run": "bun run scripts/test-https-webrtc.ts",
    "test:https:validate": "bun run scripts/validate-https-setup.ts",
    "test:load": "bun run scripts/run-load-tests.ts",
    "test:performance": "bun run scripts/test-performance-monitoring.ts",
    "test:room-lifecycle": "bun run scripts/test-room-lifecycle-handler.ts",
    "test:room-lifecycle:integration": "bun test src/handlers/__tests__/RoomLifecycleHandler.integration.test.ts --timeout 30000",
    "test:room-lifecycle:edgecases": "bun test src/handlers/__tests__/RoomLifecycleHandler.edgecases.test.ts --timeout 45000",
    "test:room-lifecycle:performance": "bun test src/handlers/__tests__/RoomLifecycleHandler.performance.test.ts --timeout 60000",
    "docker:build": "docker build -t jam-band-be .",
    "docker:run": "docker run -p 3001:3001 jam-band-be",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detach": "docker-compose up -d --build",
    "docker:stop": "docker-compose down",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs",
    "railway:status": "railway status",
    "railway:login": "railway login"
  },
  "keywords": [
    "express",
    "typescript",
    "backend",
    "jam-band"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@prisma/client": "^6.19.0",
    "@types/compression": "^1.8.1",
    "@types/multer": "^2.0.0",
    "@types/node-cache": "^4.2.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "jam-band-be": ".",
    "joi": "^17.11.0",
    "jszip": "^3.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bun": "^1.2.21",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.10.5",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.0.5",
    "prisma": "^6.19.0",
    "selfsigned": "^3.0.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
