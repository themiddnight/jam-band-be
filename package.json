{
  "name": "jam-band-be",
  "version": "1.0.0",
  "description": "Backend service for Jam Band application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=2048 dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "start:dev:gc": "NODE_ENV=development ENABLE_GC=true tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:webrtc": "jest --testPathPatterns=VoiceConnectionHandler.webrtc.test.ts --verbose",
    "test:approval": "jest --testPathPatterns=ApprovalWorkflowHandler.test.ts --verbose",
    "test:load": "bun run scripts/run-load-tests.ts",
    "docker:build": "docker build -t jam-band-be .",
    "docker:run": "docker run -p 3001:3001 jam-band-be",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detach": "docker-compose up -d --build",
    "docker:stop": "docker-compose down",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs",
    "railway:status": "railway status",
    "railway:login": "railway login"
  },
  "keywords": [
    "express",
    "typescript",
    "backend",
    "jam-band"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/node-cache": "^4.2.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jam-band-be": ".",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/socket.io-client": "^1.4.36",
    "jest": "^30.0.5",
    "selfsigned": "^3.0.1",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
