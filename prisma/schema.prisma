// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserType {
  GUEST
  REGISTERED
  PREMIUM
}

enum PresetType {
  SYNTH
  EFFECT
  SEQUENCER
  INSTRUMENT
}

model User {
  id            String    @id @default(uuid())
  email         String?   @unique
  username      String?
  passwordHash   String?
  emailVerified Boolean   @default(false)
  userType      UserType  @default(GUEST)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  emailVerifications EmailVerification[]
  passwordResets     PasswordReset[]
  oauthAccounts      OAuthAccount[]
  presets            UserPreset[]
  settings           UserSettings[]

  @@map("users")
}

model EmailVerification {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("email_verifications")
}

model PasswordReset {
  id        String    @id @default(uuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  usedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("password_resets")
}

model OAuthAccount {
  id         String   @id @default(uuid())
  userId     String
  provider   String   // 'google', 'github', etc.
  providerId String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
  @@map("oauth_accounts")
}

model UserPreset {
  id         String     @id @default(uuid())
  userId     String
  presetType PresetType
  name       String
  data       Json
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, presetType])
  @@map("user_presets")
}

model UserSettings {
  id          String   @id @default(uuid())
  userId      String   @unique
  settingsType String  // 'metronome', 'instrument_preferences', etc.
  data        Json
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_settings")
}
